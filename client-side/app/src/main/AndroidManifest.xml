<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.echo.moviememoir">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.echo.moviememoir.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.echo.moviememoir.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.echo.moviememoir.activity.RegisterActivity" />
        <activity android:name="com.echo.moviememoir.activity.HomeActivity" />
        <activity android:name="com.echo.moviememoir.activity.MovieSearchActivity" />
        <activity android:name="com.echo.moviememoir.activity.MapsActivity" />
        <activity android:name="com.echo.moviememoir.activity.MovieMemoirActivity" />
        <activity android:name="com.echo.moviememoir.activity.ReportsActivity" />
        <activity android:name="com.echo.moviememoir.activity.WatchlistActivity" />
        <activity android:name="com.echo.moviememoir.activity.AddToMemoirActivity" />
    </application>

    <!--    Prevent gradle build error-->
    <uses-sdk
        android:minSdkVersion="17"
        tools:overrideLibrary="com.xuexiang.xui" />
</manifest>